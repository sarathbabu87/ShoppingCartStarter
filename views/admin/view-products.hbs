<section>
    <div class="container">
        <div class="row mt-4">
            <a href="/admin/add-products" class="btn btn-success ml-auto">Add Products</a>
        </div>
        <table class="table mt-4">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Name</th>
      <th scope="col">Category</th>
      <th scope="col">Description</th>
      <th>Image</th>
    </tr>
  </thead>
  <tbody>
    {{#each products}}
    <tr>
      <th scope="row">1</th>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td>{{this.Description}}</td>
      <td><img style="height: 50px; width:50px" src="/images/{{this._id}}.jpg"></td>
      <td>
        <a href="/admin/edit-product/{{this._id}}" class="btn btn-warning">Edit</a>
        <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('Do you want to delete {{this.Name}}?')">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>